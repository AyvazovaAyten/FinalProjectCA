
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<UserDto>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
             
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>

                                <th>
                                    UserName
                                </th>
                                <th>
                                    SurName
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Role
                                </th>
                                <th>
                                    Status
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (UserDto user in Model)
                            {
                            <tr>

                                <td>
                                    @user.FirstName
                                </td>
                                <td>
                                    @user.SurName
                                </td>
                                <td>
                                    @user.Email
                                </td>
                                <td>
                                    @user.Role
                                </td>
                                @if (user.IsDeleted)
                                {
                                    <td class="text-danger">
                                        Deactive
                                    </td>
                                }
                                else
                                {
                                    <td class="text-success">
                                        Active
                                    </td>
                                }

                                <td>
                                    <a asp-action="ChangeStatus" asp-route-id="@user.Id" class="btn btn-primary">Change Status</a>
                                    <a asp-action="ChangeRole" asp-route-id="@user.Id" class="btn btn-warning">Change Role</a>
                                    <a asp-action="ChangePassword" asp-route-id="@user.Id" class="btn btn-danger">Change Password</a>
                                </td>
                            </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

