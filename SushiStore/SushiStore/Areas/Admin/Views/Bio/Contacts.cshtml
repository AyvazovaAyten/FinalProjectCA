@{
    ViewData["Title"] = "Contacts";
}

@model List<PhoneNumber>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Categories List</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Phone Number
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (PhoneNumber number in Model)
                        {
                            <tr>
                                <td>
                                    @number.Number
                                </td>
                                <td>
                                    <form asp-action="DeletePhoneNumber" asp-route-id="@number.Id">
                                        <button class="btn btn-danger" type="submit" method="post">Delete</button>
                                    </form>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <form asp-action="CreatePhoneNumber" class="mt-5">
                <input name="number" class="form-control" type="tel" placeholder="Phone number">
                <div class="text-danger mt-2">@TempData["Error"]</div>
                <button class="btn btn-success" type="submit" method="post">Add New Number</button>
            </form>

        </div>
    </div>
</div>




