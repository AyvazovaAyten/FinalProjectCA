
@{
    ViewData["Title"] = "Detail";
}

@model IntroSlider

<div class="row mt-5 mb-5">
    <div class="col-12 d-flex flex-wrap justify-content-around">

        <div class="col-2 product-image  mr-2 ml-2 d-flex flex-column justify-content-center">
            <img class="first-image" src="~/assets/images/campaigns/@Model.Image" alt="product" style="width:100%; border:1px solid #CED4DA; border-radius:8px;">
        </div>

    </div>
</div>


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Details</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered" style="table-layout: fixed;">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Details
                                </th>
                                <th>
                                    Duration
                                </th>
                                

                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td>
                                    @Model.SliderText
                                </td>
                                <td style="word-wrap: break-word; width: 150px; white-space:unset;">

                                    @Model.Description

                                </td>
                                <td style="word-wrap: break-word; width: 150px; white-space:unset;">

                                    @Html.Raw(Model.Details)

                                </td>
                                <td>
                                    @Model.Duration
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 d-flex align-items-stretch">
        <div class="row justify-content-center">
            <div class="col-md-12 grid-margin stretch-card">
                <a asp-action="Index" class="btn btn-primary">Go Back</a>
            </div>
        </div>
    </div>
</div>

