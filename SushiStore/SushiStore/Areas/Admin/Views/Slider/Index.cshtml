
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<IntroSlider>

<div class="row">
    
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sliders</h4>
                <p class="card-description">
                    <a asp-action="Create" class="btn btn-primary">Create new Slider</a>
                </p>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>

                                <th>
                                    Name
                                </th>
                                <th>
                                    Change
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (IntroSlider slider in Model)
                            {
                                <tr>

                                    <td>
                                        @slider.SliderText
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@slider.Id" class="btn btn-primary">Detail</a>
                                        <a asp-action="Update" asp-route-id="@slider.Id" class="btn btn-warning">Update</a>
                                        <a asp-action="Delete" asp-route-id="@slider.Id" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

