
@{
    ViewData["Title"] = "MetaTags";
}


@model List<Page>
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                
                
                <div class="row">
                    <div class="col-12 col-md-6">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            @if (Model.ElementAt(i).MetaTags.Count > 0)
                            {
                                <h3 class="mt-3">@Model.ElementAt(i).Name Page</h3>

                                @foreach (MetaTag tag in Model.ElementAt(i).MetaTags)
                                {

                                    <div class="d-flex align-content-center mt-3 mb-3">
                                        <div class="text-danger mt-2">@TempData["Error"]</div>
                                        <form asp-action="UpdateTag" asp-route-id="@tag.Id" class="forms-sample d-flex">
                                            <input type="text" name="Tag" placeholder="Tag" value="@tag.Tag" class="form-control">
                                            <button class="btn btn-success ml-3" type="submit">Save</button>
                                        </form>
                                        <form asp-action="DeleteTag" asp-route-id="@tag.Id" class="forms-sample">
                                            <div class="col-6"><button class="btn btn-danger" type="submit">Delete</button></div>
                                        </form>
                                    </div>

                                }
                            }

                        }
                    </div>
                    <div class="col-12 col-md-6">
                        <h3>Add New Meta Tag</h3>
                        <form asp-action="AddTag" class="forms-sample">
                            <div class="text-danger mt-2 mb-2">@TempData["TagError"]</div>
                            <div class="form-group">
                                <label for="tag">Tag</label>
                                <input type="text" class="form-control" name="ModelTag" id="tag" placeholder="Tag" required>
                            </div>

                            <div class="form-group">
                                <label for="pageselect">Page</label>
                                <select class="form-control" name="page" id="pageselect">
                                    @foreach (Page p in Model)
                                    {
                                        <option value="@p.Name">@p.Name</option>
                                    }
                                </select>
                            </div>
                            <button class="btn btn-success" type="submit">Add</button>
                        </form>                    
                    </div>
                   

                </div>
                    
               
            </div>
        </div>
    </div>
</div>

