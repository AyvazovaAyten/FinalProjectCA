@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Categories List</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Category Name
                            </th>
                            <th>
                                Products Count
                            </th>
                            <th>
                                Created At
                            </th>
                            <th>
                                Last Updated At
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Category category in Model)
                        {
                        <tr>
                            <td>
                                @category.Name
                            </td>
                            <td>
                                @category.Products.Count
                            </td>
                            <td>
                                @category.CreatedAt
                            </td>
                            <td>
                                @category.LastUpdateDate
                            </td>
                            <td>
                                <a class="btn btn-primary" asp-action="Detail" asp-route-id="@category.Id">Detail</a>
                                <a class="btn btn-warning" asp-action="Update" asp-route-id="@category.Id">Update</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                            </td>
                        </tr>
                    
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>