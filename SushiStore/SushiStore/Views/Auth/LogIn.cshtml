
@{
    ViewData["Title"] = "LogIn";
}
@section Title{
    @Model.Page.Title.Text
}

@section Tags{
    @foreach (MetaTag tag in Model.Page.MetaTags)
    {
        @Html.Raw(tag.Tag)
    }
}
@model LoginVM
<!-- Page Intro Begins -->
<section class="page-intro" style="background-image: url(~/assets/images/covers/@Model.Page.PageIntro.Background)">
    <div class="container-lg flex-col">
        <h1 class="page-title">@Model.Page.PageIntro.IntroText</h1>
    </div>
</section>
<!-- Page Intro Ends -->
<!-- Form Section Begins -->
<section class="account_section">
    <div class="container-lg account-container">
        <form method="post" asp-controller="Auth" asp-action="LogIn" class="account-form">
            <h4>Login</h4>
            <div asp-validation-summary="All" class="validation-error"></div>
            <div class="input-gr input-gr-icon">
                <input asp-for="Email" placeholder="Email Adress">
                <div class="input-icon"><i class="fa fa-envelope"></i></div>
                <span asp-validation-for="Email" class="validation-error"></span>
            </div>
            <div class="input-gr input-gr-icon">
                <input asp-for="Password" placeholder="Password">
                <div class="input-icon"><i class="fa fa-key"></i></div>
                <span asp-validation-for="Password" class="validation-error"></span>
            </div>
            <div class="blue-link">
                <a asp-controller="Auth" asp-action="ForgotPassword">Forgot Password?</a>
            </div>
            <div class="input-gr check">
                <input asp-for="RememberMe">
                <label asp-for="RememberMe"></label>
            </div>
            <div>
                <input class="submit-btn" type="submit" value="LogIn" />
            </div>
            <div class="rg-btn">
                <a class="register-link" asp-controller="Auth" asp-action="Register">Create New Account</a>
            </div>


        </form>
    </div>
</section>

<!-- Form Section Ends -->

@section Script{
    <partial name="_ValidationScript" />
    <partial name="_Script" />
}
